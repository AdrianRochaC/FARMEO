# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3001
NODE_ENV=production

# ========================================
# BASE DE DATOS (MySQL)
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_mysql
DB_NAME=farmeoa_db

# ========================================
# AUTENTICACIÓN (JWT)
# ========================================
# Genera una clave segura con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_y_larga

# ========================================
# CLOUDINARY (Almacenamiento de Archivos)
# OPCIONAL pero RECOMENDADO
# Obtén tus credenciales en: https://cloudinary.com/
# ========================================
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ========================================
# OPENAI (Inteligencia Artificial)
# OPCIONAL - Para generar preguntas automáticas
# Obtén tu API Key en: https://platform.openai.com/api-keys
# ========================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# ========================================
# ASSEMBLYAI (Transcripción de Audio/Video)
# OPCIONAL - Para transcribir videos
# Obtén tu API Key en: https://www.assemblyai.com/
# ========================================
ASSEMBLYAI_API_KEY=tu_assemblyai_api_key

# ========================================
# CORS (Seguridad)
# OPCIONAL - Por defecto permite todos los orígenes
# ========================================
CORS_ORIGIN=https://farmeoa.com,https://www.farmeoa.com

# ========================================
# GOOGLE DRIVE (NO RECOMENDADO - Usar Cloudinary)
# ========================================
